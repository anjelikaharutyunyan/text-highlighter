{
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "version": "2.4.1",
    "manifest_version": 3,
    "default_locale": "en",
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/16x16.png",
        "48": "icons/48x48.png",
        "64": "icons/64x64.png",
        "128": "icons/128x128.png"
    },
    "action": {
        "default_title": "__MSG_actionTitle__",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/16x16.png",
            "48": "icons/48x48.png",
            "64": "icons/64x64.png",
            "128": "icons/128x128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/16x16.png",
                "icons/48x48.png",
                "icons/64x64.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}